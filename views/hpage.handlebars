<div class="container">
    <div class="row">
        {{#each blogs as |blog|}}
        <div class="col-12">
            <div class="card bg-light mb-3" style="max-width: 75rem;">
                <a href="/blogs/{{id}}">
                    <div class="card-header d-flex justify-content-between">
                        <div>{{blog_title}}</div>
                        <p>Posted by {{userinfo.username}} on {{MDY createdAt}}</p>
                    </div>
                </a>
                <div class="card-body">
                    <p class="card-text">{{blog_text}}</p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>